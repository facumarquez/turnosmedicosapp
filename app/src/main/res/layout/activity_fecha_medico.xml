<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Especialidad"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar todo el mes"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <sun.bob.mcalendarview.MCalendarView
        android:id="@+id/mcvFechasMedico"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginLeft="30dp"
        tools:context=".MainActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horarios" />

        <Button
            android:id="@+id/btnEliminarHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Horarios" />

        <Button
            android:id="@+id/btVerTurnos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turnos" />
    </LinearLayout>

</LinearLayout>