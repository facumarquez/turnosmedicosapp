<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Especialidad"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar todo el mes"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <!--<CalendarView
        android:id="@+id/calendarMedico"
        android:layout_width="wrap_content"
        android:layout_height="302dp"
        android:layout_gravity="center" />
    -->


    <sun.bob.mcalendarview.MCalendarView
        android:id="@+id/mcvFechasMedico"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginLeft="30dp"
        tools:context=".MainActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonModHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Ver/Modificar\nHorarios" />

        <Button
            android:id="@+id/buttonEliHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Eliminar\nHorarios" />

        <Button
            android:id="@+id/buttonVerTurnos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Ver\nTurnos" />

    </LinearLayout>

</LinearLayout>